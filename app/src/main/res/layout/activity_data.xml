<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="userinfo"
            type="lins.com.stgl.bean.UserData.DataBean"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backview"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/top_bar"/>

        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                    <!--android:text="@{userinfo.name}"-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_change_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="姓名"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:ems="10" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_change_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:ems="10" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_change_sex"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="性别"
                    android:background="@drawable/bg_edittext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:ems="10" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_change_age"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="年龄"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:ems="10" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_change_club"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="所属社团"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:ems="10" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_change_mishi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:hint="设置预留信息：(用于密码找回)" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>