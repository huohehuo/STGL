<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:padding="0.0px" >
        <ImageView
            android:id="@+id/bgroud"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/comm_title_bg" />

        <TextView
            android:id="@+id/head_txt"
            style="@style/A1_Font"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="96.0dip"
            android:paddingRight="96.0dip"
            android:singleLine="true"
            android:text="首页" />

        <ImageButton
            android:id="@+id/img_myside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/ic_head_menu_normal"
            android:gravity="center"
            android:includeFontPadding="false" />
    </RelativeLayout>
<lins.com.stgl.adapter.MyScrollView
        android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="@color/backview"
        >
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="vertical" >
 <include layout="@layout/item_gonggao" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#90909090" />

        <TextView
            android:id="@+id/txt_lyb"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:drawableLeft="@drawable/ic_head_menu_pressed"
            android:drawablePadding="2dp"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="个人留言板"
            android:textColor="#000000" />

        

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#e7e7e7" />

        
        <LinearLayout
        android:id="@+id/LinearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/btn_txt_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:paddingTop="8dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="活动大厅"
            android:drawableTop="@drawable/hd"
            
            android:textColor="#000000"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/btn_txt_allst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:paddingTop="8dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="全部社团成员"
           android:drawableTop="@drawable/allman"
            android:textColor="#000000"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/btn_txt_nmchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:paddingTop="8dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="匿名吐槽区"
           android:drawableTop="@drawable/nm"
            android:textColor="#000000"
            android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</lins.com.stgl.adapter.MyScrollView>
</LinearLayout>